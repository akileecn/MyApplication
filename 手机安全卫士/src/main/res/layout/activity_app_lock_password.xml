<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        style="@style/TitleStyle"
        android:text="请输入密码"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:src="@drawable/icon_lock_big"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_password"
            android:inputType="numberPassword"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_submit"
            android:background="@drawable/selector_btn_light_green"
            android:text="确定"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <Button
                android:id="@+id/btn_no_1"
                android:onClick="customKeyDown"
                android:text="1"
                android:layout_weight="1" />
            <Button
                android:id="@+id/btn_no_2"
                android:onClick="customKeyDown"
                android:text="2"
                android:layout_weight="1" />
            <Button
                android:id="@+id/btn_no_3"
                android:onClick="customKeyDown"
                android:text="3"
                android:layout_weight="1" />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/btn_no_4"
                android:onClick="customKeyDown"
                android:text="4"
                android:layout_weight="1" />
            <Button
                android:id="@+id/btn_no_5"
                android:onClick="customKeyDown"
                android:text="5"
                android:layout_weight="1" />
            <Button
                android:id="@+id/btn_no_6"
                android:onClick="customKeyDown"
                android:text="6"
                android:layout_weight="1" />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/btn_no_7"
                android:onClick="customKeyDown"
                android:text="7"
                android:layout_weight="1" />
            <Button
                android:id="@+id/btn_no_8"
                android:onClick="customKeyDown"
                android:text="8"
                android:layout_weight="1" />
            <Button
                android:id="@+id/btn_no_9"
                android:onClick="customKeyDown"
                android:text="9"
                android:layout_weight="1" />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/btn_clear"
                android:onClick="customKeyDown"
                android:text="清除"
                android:layout_weight="1" />
            <Button
                android:id="@+id/btn_no_0"
                android:onClick="customKeyDown"
                android:text="0"
                android:layout_weight="1" />
            <Button
                android:id="@+id/btn_delete"
                android:onClick="customKeyDown"
                android:text="删除"
                android:layout_weight="1" />
        </TableRow>
    </TableLayout>
</LinearLayout>