<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aki="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        style="@style/TitleStyle"
        android:text="进程管理设置"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <cn.aki.mobilesafe.view.SettingItemView
        android:id="@+id/siv_show_system"
        aki:headline="显示系统进程"
        aki:disable_desc="隐藏"
        aki:enable_desc="显示"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <cn.aki.mobilesafe.view.SettingItemView
        android:id="@+id/siv_task"
        aki:headline="定时清理进程"
        aki:disable_desc="关闭"
        aki:enable_desc="启动"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <cn.aki.mobilesafe.view.SettingClickView
        android:id="@+id/scv_task_interval"
        aki:headline="清理时间间隔设置"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>