<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aki="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        style="@style/TitleStyle"
        android:text="@string/setting_title"/>
    <cn.aki.mobilesafe.view.SettingItemView
        android:id="@+id/siv_update"
        aki:headline="@string/setting_auto_update_title"
        aki:enable_desc="@string/setting_auto_update_enable_desc"
        aki:disable_desc="@string/setting_auto_update_disable_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <cn.aki.mobilesafe.view.SettingItemView
        android:id="@+id/siv_show_address"
        aki:headline="电话归属地显示设置"
        aki:enable_desc="归属地显示"
        aki:disable_desc="归属地不显示"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <cn.aki.mobilesafe.view.SettingClickView
        android:id="@+id/scv_address_style"
        aki:headline="设置归属地样式"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <cn.aki.mobilesafe.view.SettingClickView
        android:id="@+id/scv_address_location"
        aki:headline="设置归属地位置"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>