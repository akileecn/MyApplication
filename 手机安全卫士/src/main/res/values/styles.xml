<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- 取消actionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- 标题 -->
    <style name="TitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">30sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- 内容 -->
    <style name="ContentStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- 下一页按钮 -->
    <style name="NextButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@drawable/selector_btn_green</item>
        <item name="android:drawableRight">@drawable/next</item>
        <item name="android:onClick">next</item>
        <item name="android:text">下一页</item>
    </style>

    <!-- 上一页按钮 -->
    <style name="PreviousButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@drawable/selector_btn_green</item>
        <item name="android:drawableLeft">@drawable/previous</item>
        <item name="android:onClick">previous</item>
        <item name="android:text">上一页</item>
    </style>

    <!-- 应用弹出操作菜单 -->
    <style name="PopupAppStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- 高级工具条目 -->
    <style name="ToolItemStyle" parent="ContentStyle">
        <item name="android:background">@drawable/selector_btn_grey</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
    </style>

</resources>
